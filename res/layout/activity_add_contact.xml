<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment android:name="com.learningandroid.fragment.AddContactFragment"
        android:id="@+id/contacts_add_contact_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button android:id="@+id/contacts_add_contact_btn_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contacts_add_contact_btn_cancel" />
        
        <Button android:id="@+id/contacts_add_contact_btn_save"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/contacts_add_contact_btn_save" />
        
    </LinearLayout>
    
</LinearLayout>
